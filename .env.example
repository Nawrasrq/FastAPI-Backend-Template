# FastAPI Backend Template - Environment Configuration
# Copy this file to .env and update the values

# ============================================
# Application Settings
# ============================================
APP_NAME="FastAPI Backend Template"
DEBUG=True

# ============================================
# Database Settings
# ============================================
# SQLite (Development) - uses aiosqlite
DATABASE_URL=sqlite+aiosqlite:///./app.db

# PostgreSQL (Production) - uses asyncpg
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname

# ============================================
# Security Settings
# ============================================
# IMPORTANT: Generate secure keys for production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"

SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Argon2 Settings (password hashing)
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=65536
ARGON2_PARALLELISM=2

# Encryption key (must be 32 bytes for Fernet)
ENCRYPTION_KEY=encryption-key-change-in-production-32b

# Password requirements
PASSWORD_MIN_LENGTH=8

# ============================================
# CORS Settings
# ============================================
# Comma-separated list of allowed origins, or * for all
CORS_ORIGINS=*

# ============================================
# API Documentation
# ============================================
API_TITLE="FastAPI Backend Template API"
API_VERSION=1.0.0
OPENAPI_VERSION=3.0.3

# ============================================
# Testing
# ============================================
TESTING=False
